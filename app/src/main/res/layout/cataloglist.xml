<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutAnimation="@anim/layout_animation_up_to_down"
    android:layout_margin="2.5dp"
    android:layout_marginRight="2.5dp"
    android:layout_marginLeft="2.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="65"
        android:padding="3dp">
        <TextView
            android:id="@+id/textpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Patient Name:"
            android:textColor="@color/input_login_hint"
            />

        <TextView
            android:id="@+id/textgendate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="16dp"
            android:textColor="@color/input_login_hint"
            />

        <TextView
            android:id="@+id/textcdoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Name:"
            android:textSize="16dp"
            android:textColor="@color/input_login_hint"
            />

        <TextView
            android:id="@+id/textaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16dp"
            android:textColor="@color/input_login_hint"
            />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="35"
        android:padding="3dp">
    <TextView
        android:id="@+id/pname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/input_register_bg"
      />

        <TextView
            android:id="@+id/gendate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:textColor="@color/input_register_bg"
            />

        <TextView
            android:id="@+id/cdoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/input_register_bg"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/input_register_bg"
            />
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>